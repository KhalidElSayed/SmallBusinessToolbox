<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

    <LinearLayout android:id="@+id/loans_and_grants_details_controls"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:background="@color/details_background"
        android:layout_alignParentBottom="true"
        >
    <Button android:id="@+id/loans_and_grants_details_visit_link"
        android:text="Visit Link"
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="33"
        />
    <Button android:id="@+id/loans_and_grants_details_add_bookmark"
        android:text="Add Bookmark"
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="34"
        />
    <Button android:id="@+id/loans_and_grants_details_dismiss_details"
        android:text="Dismiss"
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="33"
        />
    </LinearLayout>

    <TableLayout android:id="@+id/loans_and_grants_details_table"
        android:stretchColumns="1"
        android:shrinkColumns="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dip"
        android:visibility="gone"
        android:background="@color/details_background"
        android:layout_above="@id/loans_and_grants_details_controls">
        
        <TableRow android:id="@+id/loans_and_grants_details_title_row">
            <TextView
                android:text="Title:"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                />
            <TextView android:id="@+id/loans_and_grants_details_title_value"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                />
        </TableRow>
        
        <TableRow android:id="@+id/loans_and_grants_details_description_row">
            <TextView
                android:text="Description:"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                />
            <TextView android:id="@+id/loans_and_grants_details_description_value"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:maxLines="7"
                android:scrollbars="vertical"
                />
        </TableRow>
        
        <TableRow android:id="@+id/loans_and_grants_details_url_row">
            <TextView
                android:text="URL:"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                />
            <TextView android:id="@+id/loans_and_grants_details_url_value"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                />
        </TableRow>
        
        <TableRow android:id="@+id/loans_and_grants_details_location_row">
            <TextView
                android:text="Location:"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                />
            <TextView android:id="@+id/loans_and_grants_details_location_value"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                />
        </TableRow>
        
        <TableRow android:id="@+id/loans_and_grants_details_government_type_row">
            <TextView
                android:text="Gov't Type:"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                />
            <TextView android:id="@+id/loans_and_grants_details_government_type_value"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                />
        </TableRow>

        <TableRow android:id="@+id/loans_and_grants_details_loan_type_row">
            <TextView
                android:text="Loan Type:"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                />
            <TextView android:id="@+id/loans_and_grants_details_loan_type_value"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                />
        </TableRow>

        <TableRow android:id="@+id/loans_and_grants_details_agency_row">
            <TextView
                android:text="Agency:"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                />
            <TextView android:id="@+id/loans_and_grants_details_agency_value"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                />
        </TableRow>

        <TableRow android:id="@+id/loans_and_grants_details_industry_row">
            <TextView
                android:text="Industry:"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                />
            <TextView android:id="@+id/loans_and_grants_details_industry_value"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                />
        </TableRow>

        <!-- Qualifications (i.e. green, minority, woman-owned, military-owned... -->
        <TableRow android:id="@+id/loans_and_grants_details_general_purpose_row">
            <TextView
                android:text=""
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                />
            <TextView
                android:text="General Purpose"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                />
        </TableRow>

        <TableRow android:id="@+id/loans_and_grants_details_development_row">
            <TextView
                android:text=""
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                />
            <TextView
                android:text="Development"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                />
        </TableRow>

        <TableRow android:id="@+id/loans_and_grants_details_exporting_row">
            <TextView
                android:text=""
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                />
            <TextView
                android:text="Exporting"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                />
        </TableRow>

        <TableRow android:id="@+id/loans_and_grants_details_contractor_row">
            <TextView
                android:text=""
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                />
            <TextView
                android:text="Contractor only"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                />
        </TableRow>

        <TableRow android:id="@+id/loans_and_grants_details_green_row">
            <TextView
                android:text=""
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                />
            <TextView
                android:text="Green"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                />
        </TableRow>

        <TableRow android:id="@+id/loans_and_grants_details_military_row">
            <TextView
                android:text=""
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                />
            <TextView
                android:text="Military owned"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                />
        </TableRow>

        <TableRow android:id="@+id/loans_and_grants_details_minority_row">
            <TextView
                android:text=""
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                />
            <TextView
                android:text="Minority owned"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                />
        </TableRow>

        <TableRow android:id="@+id/loans_and_grants_details_woman_row">
            <TextView
                android:text=""
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                />
            <TextView
                android:text="Woman owned"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                />
        </TableRow>

        <TableRow android:id="@+id/loans_and_grants_details_disabled_row">
            <TextView
                android:text=""
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                />
            <TextView
                android:text="Disabled"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                />
        </TableRow>

        <TableRow android:id="@+id/loans_and_grants_details_rural_row">
            <TextView
                android:text=""
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                />
            <TextView
                android:text="Rural areas"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                />
        </TableRow>

        <TableRow android:id="@+id/loans_and_grants_details_disaster_row">
            <TextView
                android:text=""
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                />
            <TextView
                android:text="Disaster Relief"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                />
        </TableRow>

    </TableLayout>  
    
    <ListView android:id="@id/android:list" 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@id/loans_and_grants_details_table"
        />
</RelativeLayout>
